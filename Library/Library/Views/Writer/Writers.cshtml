@model IEnumerable<Library.Models.Writer>

@{
    ViewData["Title"] = "Writers";
}

<h2>Writers</h2>

<p>
    <a asp-action="AddWriter">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WriterName)
            </th>
            <th>
                Year of birth
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WriterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfBirth)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditWriter", new { id = item.WriterId  }) |
                @Html.ActionLink("Details", "WriterDetails", new { id = item.WriterId  }) |
                @Html.ActionLink("Delete", "DeleteWriter", new { id = item.WriterId  })
            </td>
        </tr>
}
    </tbody>
</table>
