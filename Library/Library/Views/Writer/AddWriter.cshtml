@model Library.Models.Writer

@{
    ViewData["Title"] = "AddWriter";
}

<h2>AddWriter</h2>

<h4>Writer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddWriter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WriterName" class="control-label"></label>
                <input asp-for="WriterName" class="form-control" />
                <span asp-validation-for="WriterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfBirth" class="control-label"></label>
                <input asp-for="YearOfBirth" class="form-control" />
                <span asp-validation-for="YearOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Writers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
